{
    "name": "api",
    "version": "1.0.0",
    "description": "Simple Express API",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "type-check": "tsc --noEmit",
        "migrate": "ts-node-dev --transpile-only src/migrations/run-migrations.ts",
        "migrate:prod": "node dist/migrations/run-migrations.js"
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^4.18.2",
        "pg": "^8.11.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.0",
        "@types/pg": "^8.10.9",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}